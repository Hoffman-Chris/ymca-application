@using ymca_application.Extensions

@{
    ViewBag.Title = "Users";
    var Role = User.Identity.GetRole();
}

<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />

    <title>Users</title>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.6.5/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://editor.datatables.net/extensions/Editor/css/editor.dataTables.min.css" />
</head>
<body class="dataTables">
    <div class="container">
        <h1>Manage Users</h1>
        <br />
        <table id="Users" class="display text-nowrap compact" style="width:100%">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Join Date</th>
                </tr>
            </thead>
        </table>
    </div>
</body>
</html>

@section scripts{
    <script type="text/javascript" charset="utf-8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="https://cdn.datatables.net/buttons/1.6.5/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="https://cdn.datatables.net/select/1.3.1/js/dataTables.select.min.js"></script>
    <script src="~/Content/DataTables/Editor-1.9.6/js/dataTables.editor.min.js"></script>

    <script>

        var editor;
        var defaultLength = 25;
        $(document).ready(function () {

            // Disable autocomplete on form fields
            $.extend(true, $.fn.dataTable.Editor.Field.defaults, {
                attr: {
                    autocomplete: 'off'
                }
            });

            // Editor Form
            var editor = new $.fn.dataTable.Editor({
                ajax: '/api/GetUsers',
                table: '#Users',
                fields: [
                    {
                        label: "First Name:",
                        name: "AspNetUsers.FirstName"
                    },
                    {
                        label: "Last Name:",
                        name: "AspNetUsers.LastName"
                    },
                    {
                        label: "Email:",
                        name: "AspNetUsers.Email"
                    },
                    {
                        label: "Phone Number:",
                        name: "AspNetUsers.PhoneNumber"
                    },
                    {
                        label: "Address:",
                        name: "AspNetUsers.Address1"
                    },
                    {
                        label: "Address 2:",
                        name: "AspNetUsers.Address2"
                    },
                    {
                        label: "City:",
                        name: "AspNetUsers.City"
                    },
                    {
                        label: "State:",
                        name: "AspNetUsers.State"
                    },
                    {
                        label: "Zip:",
                        name: "AspNetUsers.Zip"
                    },
                    {
                        label: "Date Joined:",
                        name: "AspNetUsers.JoinDate"
                    },
                    {
                        label: "Role:",
                        name: "AspNetUsers.Role",
                        type: "select",
                        placeholder: "Select a role"
                    },
                    {
                        label: "Active:",
                        name: "AspNetUsers.Active",
                        type: "checkbox",
                        options: [
                            { label: "", "value": "True" }
                        ],
                        separator: "|",
                        unselectedValue: "False"
                    },
                    {
                        name: "AspNetUsers.LockoutEndDateUtc",
                        type: "hidden"
                    }
                ]
            });

            // Disable date field from being edited.
            editor.field('AspNetUsers.JoinDate').disable();

            // Defailt active to true on create event.
            editor.on('initCreate', function () {
                editor.field('AspNetUsers.Active').val("True")
            });

            // If the Active is active on form submission set the date to null; else, set the date to the end of time.
            editor.on('initSubmit', function () {
                if (editor.field('AspNetUsers.Active').val() === "True") {
                    editor.field('AspNetUsers.LockoutEndDateUtc').set(null);
                } else {
                    editor.field('AspNetUsers.LockoutEndDateUtc').set('9999-12-31');
                }
            });

            // DataTables table
            var table = $('#Users').DataTable({
                autoWidth: false,
                select: {
                    style: 'single'
                },
                // Default table lengths
                lengthMenu: [[defaultLength, 50, 100, -1], [defaultLength, 50, 100, "All"]],
                // Table data source
                ajax: {
                    url: '/api/GetUsers'
                },
                // Table columns
                columns: [
                    { data: "AspNetUsers.FirstName" },
                    { data: "AspNetUsers.LastName" },
                    { data: "AspNetUsers.Email" },
                    { data: "AspNetUsers.JoinDate" }
                ],
                // Control button layout
                dom: '<"floatRight"B><"clear">lfrtip',
                // Default table order
                order: [[0, "asc"]],
                buttons: [
                    { extend: "create", editor: editor, formTitle: 'Create new user', attr: { id: 'newButton' } },
                    { extend: "edit", editor: editor, formTitle: 'Edit existing user', attr: { id: 'editButton' } },
                    {
                        // Show default view filter button
                        text: 'Show Default View', action: function (e, dt, node, config) {
                            table.search('')
                                .columns().search('')
                                .columns().order('')
                                .page.len(defaultLength)
                                .column(0).order('asc').draw();
                        }
                    }
                ]
            });

            // Disable buttons unless row is selected.
            table.on('select deselect', function () {
                var selectedRows = table.rows({ selected: true }).count();
                table.button(1).enable(selectedRows === 1);
            });

        });</script>
}